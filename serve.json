{
  "rewrites": [{ "source": "**", "destination": "/index.html" }],

  "headers": [
    {
      "source": "**/*.{js,css}",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "**/*.{png,jpg,jpeg,gif,svg,woff,woff2,ttf,eot,ico}",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
